{{#if (eq position "left")}}
<div class="tray-title-small">
    <span>
        {{#if hasJournal}}
        {{journalName}}
        {{else}}
        Shared Notes
        {{/if}}
    </span>
    <div class="notes-controls">
        {{#if isGM}}
        <i class="fas fa-cog set-journal-button" title="Set Journal"></i>
        <i class="fas {{#if isPersistent}}fa-thumbtack{{else}}fa-thumbtack unpinned{{/if}} toggle-persistent-button" title="{{#if isPersistent}}Journal is pinned for players{{else}}Pin this journal for players{{/if}}"></i>
        {{/if}}
        <i class="fas fa-feather character-sheet-toggle" title="Open Character Sheet"></i>
    </div>
</div>
{{#if hasJournal}}
<div class="notes-page-selector">
    {{#if hasPages}}
    <select class="page-select">
        {{#if page}}
        <option value="{{page.id}}" selected>{{pageName}}</option>
        {{/if}}
        {{#each pages}}
        {{#unless (eq id ../page.id)}}
        <option value="{{id}}">{{name}}</option>
        {{/unless}}
        {{/each}}
        {{#if isGM}}
        <option value="browse-pages">Browse pages...</option>
        {{/if}}
    </select>
    {{else}}
    <div class="page-name">{{pageName}}</div>
    {{/if}}
</div>

{{#if page}}
<div class="notes-toolbar">
    <span>{{pageName}}</span>
    <div class="notes-controls">
        {{#if canEditPage}}
        <i class="fas fa-edit toggle-edit-mode-button" title="Edit with Foundry's Collaborative Editor"></i>
        {{/if}}
        <i class="fas fa-book-open open-journal-button" title="Open in Journal Viewer"></i>
    </div>
</div>
{{/if}}
{{/if}}

<div class="notes-content">
    {{#if hasPermissionIssue}}
    <div class="permission-error">
        <i class="fas fa-lock"></i>
        <p>You don't have permission to view this journal.</p>
    </div>
    {{else if hasJournal}}
    <div class="prose journal-content journal-entry-content journal-entry-pages single-page journal-entry-page text level1 dnd5e2-journal journal-page-content"></div>
    {{else}}
    <div class="no-journal-selected">
        {{#if isGM}}
        <p>No journal has been selected for notes.</p>
        <p>Click the <i class="fas fa-cog"></i> icon to select a journal.</p>
        <button class="set-journal-button-large">
            <i class="fas fa-book"></i> Select Journal
        </button>
        {{else}}
        <p>No journal has been selected by the GM yet.</p>
        {{/if}}
    </div>
    {{/if}}
</div>
{{/if}} 