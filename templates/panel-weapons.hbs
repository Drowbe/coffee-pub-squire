<div class="weapons-panel">
    {{#if (eq position "left")}}
    <div class="section-header">
        <div class="header-left">
            <i class="fas fa-sword"></i> Weapons
        </div>
        <div class="header-right">
            <i class="fas fa-shield-alt weapon-filter-toggle {{#if showOnlyEquipped}}active{{/if}}" title="Toggle Equipped Weapons"></i>
        </div>
    </div>
    {{/if}}
    <div class="weapons-list">
        {{#each weapons}}
        <div class="weapon-item {{#if this.equipped}}prepared{{/if}}" data-weapon-id="{{this.id}}">
            <div class="weapon-row">
                <div class="weapon-image-container">
                    <img class="weapon-image" src="{{this.img}}" alt="{{this.name}}"/>
                    <i class="fas fa-dice-d20 weapon-roll-overlay"></i>
                </div>
                <div class="weapon-name">{{this.name}}</div>
                <div class="tray-buttons">
                    <i class="fas fa-shield-alt {{#unless this.equipped}}faded{{/unless}}" title="Toggle Equipped"></i>
                    <i class="fas fa-heart {{#unless this.isFavorite}}faded{{/unless}}" title="Toggle Favorite"></i>
                    <i class="fas fa-feather"></i>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>