{{#if (eq position "left")}}
<div class="tray-title-small">
    <span>GM Details</span>
    <div class="gmdetails-controls">
        <i id="gm-toggle" class="fa-solid fa-chevron-down" title="Toggle GM Details Panel"></i>
    </div>
</div>
<div id="gm-content" class="{{#if isCollapsed}}collapsed{{/if}}">
    {{#if resistances.length}}
        <div class="gm-row">
            <h1 class="gm-row-title">RESISTANCES</h1> 
            {{#each resistances}}{{#unless @first}}, {{/unless}}{{this}}{{/each}}
        </div>
    {{/if}}
    {{#if immunities.length}}
        <div class="gm-row">
            <h1 class="gm-row-title">IMMUNITIES</h1> 
            {{#each immunities}}{{#unless @first}}, {{/unless}}{{this}}{{/each}}
        </div>
    {{/if}}
    {{#if biographyHtmlRaw}}
        <div class="gm-row">
            <h1 class="gm-row-title">BIOGRAPHY</h1> 
            {{{biographyHtmlRaw}}}
        </div>
    {{/if}}
</div>
{{/if}}
