<div class="favorites-panel">
    {{#if (eq position "left")}}
    <div class="section-header">
        <div class="header-left">
            <i class="fas fa-heart"></i> Favorites
        </div>
    </div>
    {{/if}}
    <div class="favorites-list">
        {{#each favorites}}
        <div class="favorite-item" data-item-id="{{this.id}}">
            <div class="favorite-row">
                <div class="favorite-image-container">
                    <img class="favorite-image" src="{{this.img}}" alt="{{this.name}}"/>
                    <i class="fas fa-dice-d20 favorite-roll-overlay"></i>
                </div>
                <div class="favorite-name">{{this.name}}</div>
                <div class="tray-buttons">
                    <i class="fas fa-heart" title="Remove from Favorites"></i>
                    <i class="fas fa-feather"></i>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div> 