<form class="codex-form">
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" value="{{entry.name}}" required>
    </div>

    <div class="form-group">
        <label>Category</label>
        <input type="text" name="category" value="{{entry.category}}" required>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea name="description" rows="4">{{entry.description}}</textarea>
    </div>

    <div class="form-group">
        <label>Plot Hook</label>
        <textarea name="plotHook" rows="3">{{entry.plotHook}}</textarea>
    </div>

    <div class="form-group">
        <label>Location</label>
        <input type="text" name="location" value="{{entry.location}}">
    </div>

    <div class="form-group">
        <label>Tags (comma-separated)</label>
        <input type="text" name="tags" value="{{entry.tags}}">
    </div>

    <div class="form-group buttons">
        <button type="submit">
            <i class="fas fa-save"></i> Save Entry
        </button>
        <button type="button" class="cancel">
            <i class="fas fa-times"></i> Cancel
        </button>
    </div>
</form> 